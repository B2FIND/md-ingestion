<?xml version="1.0" encoding="UTF-8" ?>
<mapping-table>
  <!-- Mappings for DaRUS metadata. -->
  <namespaces>
    <namespace ns="h" uri="http://www.openarchives.org/OAI/2.0/"/>
    <namespace ns="datacite" uri="http://datacite.org/schema/kernel-4"/>
    <namespace ns="" uri="http://datacite.org/schema/kernel-4"/>
  </namespaces>
  <mappings>
    <!-- General Information -->
    <field name="title">
      <xpath>//titles/title</xpath>
    </field>
    <field name="notes">
      <xpath>//descriptions/description</xpath>
    </field>
    <field name="tags">
      <xpath>//subjects/subject</xpath>
    </field>
    <!-- Identifier : (Source,PID or DOI) -->
    <field name="url">
      <xpath>//resource/identifier</xpath>
    </field>
    <field name="RelatedIdentifier">
      <xpath>//alternateIdentifiers/alternateIdentifier</xpath>
    </field>
    <field name="MetadataAccess">
      <xpath>//h:header/h:identifier</xpath>
    </field>
    <!-- Provenance information -->
    <field name="author">
      <xpath>//creators/creator/creatorName</xpath>
    </field>
    <field name="Publisher">
      <xpath>//publisher</xpath>
    </field>
    <field name="Contributor">
      <xpath>//contributors/contributor/contributorName</xpath>
    </field>
    <field name="PublicationYear">
      <xpath>//publicationYear</xpath>
    </field>
    <field name="Rights">
      <xpath>//rightsList//rights</xpath>
    </field>
    <field name="OpenAccess">
      <xpath></xpath>
    </field>
    <field name="Contact">
      <xpath>//contributors/contributor/contributorName</xpath>
    </field>
    <!-- Representation information -->
    <field name="Language">
      <xpath>//language</xpath>
    </field>
    <field name="ResourceType">
      <xpath>//resourceType</xpath>
    </field>
    <field name="Format">
      <xpath>//formats/format</xpath>
    </field>
    <field name="Checksum">
      <xpath></xpath> 
    </field>
    <!-- Coverage information -->
    <field name="Discipline">
      <string></string>
    </field>
    <field name="SpatialCoverage">
      <xpath>//geoLocations/geoLocation/geoLocationPoint,//geoLocations/geoLocation/geoLocationBox</xpath>
    </field>
    <field name="TemporalCoverage">
      <xpath>//dates/date</xpath>
    </field>
    <!-- Hidden fields, only shown to logged in CKAN users -->
    <field name="fulltext">
      <xpath>normalize-space(string(/))</xpath>
    </field>
    <field name="oai_set">
      <xpath>//h:header/h:setSpec</xpath>
    </field>
    <field name="oai_identifier">
      <xpath>//h:header/h:identifier</xpath>
    </field>
  </mappings>
</mapping-table>